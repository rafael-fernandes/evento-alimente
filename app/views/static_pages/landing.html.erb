<script>
  $(document).ready(function() {
    $(document).scroll(function() {
      if ($(document).scrollTop() > 65) {
        $('.navbar').removeClass('d-none');
      }
  
      else {
        $('.navbar').addClass('d-none');
      }
    });
  });
</script>