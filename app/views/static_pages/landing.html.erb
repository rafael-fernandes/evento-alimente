  </div>
</section>

<section class="map-location">
  <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3658.5826803148902!2d-46.61464328540418!3d-23.51153636563843!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94ce58bd535698b1%3A0x32d44ab158b94c5d!2sExpo+Center+Norte!5e0!3m2!1spt-BR!2sbr!4v1521310094765"
    width="100%" height="350" frameborder="0" style="border:0" allowfullscreen></iframe>
</section>

<section class="producer-and-developer">
  <div class="container">
    <div class="row" data-aos="zoom-in">
      <div class="col-md-6 col-lg-4">
        Produção:
        <br>
        <a href="#" target="_blank">
          <%= image_tag "caroline.png", height: '32px', class: 'mt-3' %>
        </a>
      </div>

      <div class="col-md-6 col-lg-8 developer">
        Desenvolvimento:
        <br>
        <a href="http://typo.digital" target="_blank">
          <%= image_tag "typo.png", height: '50px', class: 'mt-2' %>
        </a>
      </div>
    </div>
  </div>
</section>

<script>
  $(document).ready(function() {
    $(document).scroll(function () {
      if ($(document).scrollTop() > 65) {
        $('.navbar').removeClass('d-none');
      }

      else {
        $('.navbar').addClass('d-none');
      }
    });
  });
</script>