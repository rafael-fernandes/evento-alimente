<section class="location">
  <div class="container">
    <div class="row">
      <div class="col-12 col-sm-12 col-md-6 col-lg-4 when" data-aos="zoom-in-right">
        <div class="title">
          <strong>Quando?</strong>
        </div>

        <div class="date">
          14 e 15 de julho
        </div>

        <div class="hour">
          das 8h às 19h
        </div>
      </div>

      <div class="col-12 col-sm-12 col-md-6 col-lg-8 where" data-aos="zoom-in-left">
        <div class="title">
          <strong>Onde?</strong>
        </div>

        <div class="center-norte">
          Expo Center Norte
        </div>

        <div class="address">
          Rua José Bernardo Pinto, 333, Vila Guilherme, São Paulo - SP
