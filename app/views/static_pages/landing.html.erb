<section class="location">
  <div class="container">
    <div class="row">
      <div class="col-12 col-sm-12 col-md-6 col-lg-4 when" data-aos="zoom-in-right">
        <div class="title">
          <strong><%= t('localizacao.quando') %></strong>
        </div>

        <div class="date">
          <%= t('localizacao.data') %>
        </div>

        <div class="hour">
          <%= t('localizacao.hora') %>
        </div>
      </div>

      <div class="col-12 col-sm-12 col-md-6 col-lg-8 where" data-aos="zoom-in-left">
        <div class="title">
          <strong><%= t('localizacao.onde') %></strong>
        </div>

        <div class="center-norte">
          <%= raw t('localizacao.center_norte') %>
        </div>

        <div class="address">
          <%= t('localizacao.endereco') %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3">
        <div class="official-hotel pt-4" data-aos="zoom-in-right">
          <div class="title">
            <%= t('localizacao.hotel') %>
          </div>

          <%= link_to "http://www.accorhotels.com/lien_externe.svlt?goto=rech_resa&destination=2992&sourceid=LOWC&dayIn=14&monthIn=07&yearIn=2018&nightNb=1&preferredCode=LOWC&merchantid=par-accorFR", target: '_blank' do %>
            <%= image_tag 'hotal.jpg', width: '100%', style: 'border-radius: 10px', class: 'mt-2' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="map-location">
  <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3658.5826803148902!2d-46.61464328540418!3d-23.51153636563843!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94ce58bd535698b1%3A0x32d44ab158b94c5d!2sExpo+Center+Norte!5e0!3m2!1spt-BR!2sbr!4v1521310094765"
    width="100%" height="350" frameborder="0" style="border:0" allowfullscreen></iframe>
</section>

<section class="producer-and-developer">
  <div class="container">
    <div class="row" data-aos="zoom-in">
      <div class="col-md-6 col-lg-4">
        <%= t('producao') %>:
        <br>
        <a href="#" target="_blank">
          <%= image_tag "caroline.png", height: '45px', class: 'mt-3' %>
        </a>
      </div>

      <div class="col-md-6 col-lg-8 developer">
        <%= t('desenvolvimento') %>:
        <br>
        <a href="http://typo.digital" target="_blank">
          <%= image_tag "typo.png", height: '50px', class: 'mt-2' %>
        </a>
      </div>
    </div>
  </div>
</section>

<%= render 'modals' %>

<script>
  $(document).ready(function() {
    $(document).scroll(function () {
      if ($(document).scrollTop() > 65) {
        $('.navbar').removeClass('d-none');
        $('.navbar-home').addClass('d-none');
      }

      else {
        $('.navbar').addClass('d-none');
        $('.navbar-home').removeClass('d-none');
      }
    });
  });
</script>
