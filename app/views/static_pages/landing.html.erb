<section class="location">
  <div class="container">
    <div class="row">
      <div class="col-12 col-sm-12 col-md-6 col-lg-4 when" data-aos="zoom-in-right">
        <div class="title">
          <strong><%= t('localizacao.quando') %></strong>
        </div>

        <div class="date">
          <%= t('localizacao.data') %>
        </div>

        <div class="hour">
          <%= t('localizacao.hora') %>
        </div>
      </div>

      <div class="col-12 col-sm-12 col-md-6 col-lg-8 where" data-aos="zoom-in-left">
        <div class="title">
          <strong><%= t('localizacao.onde') %></strong>
        </div>

        <div class="center-norte">
          <%= raw t('localizacao.center_norte') %>
        </div>

        <div class="address">
          <%= t('localizacao.endereco') %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3">
        <div class="official-hotel pt-4" data-aos="zoom-in-right">
          <div class="title">
            <%= t('localizacao.hotel.titulo') %>
          </div>

          <%= link_to "http://www.sheratonsaopaulowtc.com.br/", target: "_blank" do %>
            <%= image_tag 'logo-sheraton-bg.png', style: 'border-radius: 10px', width: '100%', class: 'mt-2' %>
          <% end %>
          
          <div class="pt-4">
            <%= raw t('localizacao.hotel.descricao') %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

